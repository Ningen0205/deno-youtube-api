name: send_line_message_workflow
on:
  schedule:
    - cron: '0 8 * * *'


jobs:
  send_line_message:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@main
      - uses: denolib/setup-deno@1.1.0
        with:
          deno-version: 1.x
      - name: Run script
      - run deno run --allow-all mod.ts
